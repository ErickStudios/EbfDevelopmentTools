* @returns ReturnOn donde retorna el string
*/
tapot ItoX (
    _Number_::Number,
    _CifresCount_::Number,
    _ReturnOn_::String
)

    (LET*)1 = *_Number_
    (LET*)2 = *_CifresCount_

    _CallOut 59 1
    _ReturnOn_ = *3

END tapot

tapot ItoA (
