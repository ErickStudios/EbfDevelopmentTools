// incluir la libreria universal
%include
    lib/ebf.heasm


/**
* _Command_
*
* el comando
*/
Array _Command_ _YaLeTocaraXd_

/**
* _DumpCmd_
*
* muestra la memoria
*/
Array _DumpCmd_ AllocatePool->5

/**
* _DumptCmd_
*
* muestra la memoria a una direccion especifica
*/
Array _DumptCmd_ AllocatePool->6

//
// funciones fundamentales
//

/**
* _Initialize_
*
* funcion de inicializacion
*/
FUNCTION _Initialize_
    _IProto()

/**
* _Main_
*
* funcion principal
*/
FUNCTION _Main_
    _IProto()

/**
* _Clean_
*
* funcion de limpieza de memoria del programa
*/
FUNCTION _Clean_
    _IProto()

//
// variables del comando --dmp
//

/**
* _DmpFromMem_
*
* desde la direccion
*/
LET _DmpFromMem_

/**
* _DmpSizeOfMem_
*
* el tama√±o de la direccion
*/
LET _DmpSizeOfMem_

/**
* _DmpToMem_
*
* hasta la direccion
*/
LET _DmpToMem_

/**
* _DmpIndex_
*
* el index
*/
LET _DmpIndex_

/**
* _DmpIndexLine_
*
* el index de 8
*/
LET _DmpIndexLine_

//
// ejecutar todo
//

call _Initialize_
call _Main_
call _Clean_

// detener el programa
_CallOut 0 0

FUNCTION _Initialize_

    // comando de dmp
    _DumpCmd_ [0] '-'
    _DumpCmd_ [1] '-'
    _DumpCmd_ [2] 'd'
    _DumpCmd_ [3] 'm'
    _DumpCmd_ [4] 'p'

    // comando de dmpt
    _DumptCmd_ [0] '-'
    _DumptCmd_ [1] '-'
    _DumptCmd_ [2] 'd'
    _DumptCmd_ [3] 'm'
    _DumptCmd_ [4] 'p'
    _DumptCmd_ [5] 't'

    // obtener el comando
    call_tapot GetParam 0 _Command_

    __asm ret

FUNCTION _Main_

    // --dmp
    IF BufferCmp<_Command_,_DumpCmd_> THEN _DmpCmdMake_
    IF BufferCmp<_Command_,_DumptCmd_> THEN _DmptCmdMake_

    __asm ret

FUNCTION _DmpCmdMake_

    // --dmp [From] Size
    call_tapot GetParam 1 5
    call_tapot Xtoi 5 _DmpFromMem_
    // --dmp From [Size]
    call_tapot GetParam 2 5
    call_tapot Xtoi 5 _DmpSizeOfMem_

    // sumarlos
    _DmpToMem_ = *_DmpFromMem_
    _Math _DmpToMem_ + _DmpSizeOfMem_

    // el index
    _DmpIndex_ = *_DmpFromMem_
    _DmpIndexLine_ = 0

    call _DmpCmdMakeLoop_

    __asm ret

FUNCTION _DmptCmdMake_

    // --dmp [From] To
    call_tapot GetParam 1 5
    call_tapot Xtoi 5 _DmpFromMem_
    // --dmp From [To]
    call_tapot GetParam 2 5
    call_tapot Xtoi 5 _DmpSizeOfMem_

    // sumarlos
    _DmpToMem_ = *_DmpSizeOfMem_

    // el index
    _DmpIndex_ = *_DmpFromMem_
    _DmpIndexLine_ = 0

    call _DmpCmdMakeLoop_

    __asm ret

FUNCTION _DmpCmdMakeLoop_

    (LET*)1 = **_DmpIndex_

    (LET*)2 = 0
    IF 1|!=|2 THEN _WriteMemChar_
    (LET*)2 = 0
    IF 1|==|2 THEN _WriteMemNull_

    // incrementarlos
    __asm increment _DmpIndex_
    __asm increment _DmpIndexLine_

    // si es 32
    (LET*)2 = 32
    IF _DmpIndexLine_|==|2 THEN _DmpMakeInsertLine_

    // saltar si es menor
    call_tapot CmpAndJump _DmpIndex_ _DmpToMem_ _ComparatorType_IfNotGreater_ _DmpCmdMakeLoop_ 0

    _CallOut 9 0

    __asm ret

FUNCTION _WriteMemNull_

    (LET*)1 = '.'
    call_tapot Outpud 1

    __asm ret

FUNCTION _WriteMemChar_

    // obtener el caracter
    (LET*)1 = **_DmpIndex_

    // imprimirlo
    call_tapot Outpud 1

    __asm ret

FUNCTION _DmpMakeInsertLine_

    // nueva linea
    (LET*)1 = '\n'

    // imprimirlo
    call_tapot Outpud 1

    // de nuevo 0
    _DmpIndexLine_ = 0

    __asm ret

FUNCTION _Clean_

    //
    // liberar los comandos
    //

    FreePool _DumpCmd_
    FreePool _DumptCmd_

    __asm ret